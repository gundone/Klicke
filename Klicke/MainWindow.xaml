<Window x:Class="Klicke.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Klicke"
        mc:Ignorable="d"
        Title="Klicke"
        Height="522"
        Width="694"
        Closing="Window_Closing">
    <Grid Background="{DynamicResource ResourceKey=Brush05}">
        <Menu Height="36"
              VerticalAlignment="Top"
              Grid.ColumnSpan="2">
            <MenuItem Header="File">
                <MenuItem x:Name="SaveMenuItem"
                          Header="Save"
                          RenderTransformOrigin="0.5,0.5"
                          Click="SaveMenuItem_OnClick">
                </MenuItem>
                <MenuItem x:Name="LoadMenuItem"
                          Header="Load"
                          Click="LoadMenuItem_OnClick"
                          RenderTransformOrigin="0.5,0.5">
                </MenuItem>
                <!--<Separator />-->
                <MenuItem Header="Exit"
                          Click="ExitMenuItemClick"
                          RenderTransformOrigin="0.5,0.5">
                </MenuItem>
            </MenuItem>
            <MenuItem Header="About"></MenuItem>
        </Menu>
        <!--<TabControl x:Name="TabControl"
                    Background="#FF333333"
                    BorderBrush="#FF565656"
                    Margin="0,36,0,0"
                    Grid.ColumnSpan="2"
                    Grid.Column="0">
            <TabItem Header="Record">
                
            </TabItem>
            <TabItem Header="Ecexute">
                <Grid Background="{DynamicResource ResourceKey=Brush05}">
                   
                </Grid>
            </TabItem>
        </TabControl>-->
        <Grid Background="{DynamicResource ResourceKey=Brush05}"
              Margin="0,36,0,0">
            <Button x:Name="AddButton"
                    Content="Add"
                    Height="19"
                    Width="75"
                    HorizontalAlignment="Left"
                    Margin="10,10,0,0"
                    VerticalAlignment="Top"
                    Click="AddButton_OnClick" />
            <Button x:Name="StartButton"
                    Content="Execute"
                    Height="19"
                    Width="75"
                    HorizontalAlignment="Left"
                    Margin="90,10,0,0"
                    VerticalAlignment="Top"
                    Click="StartButton_Click" />
            <TextBox x:Name="ActionListBox"
                     Margin="10,45,10,10"
                     AcceptsReturn="True"
                     TextChanged="ActionListBox_TextChanged" />
        </Grid>
    </Grid>
</Window>
